<h1><%= @user.name %></h1>

<% if @user.summoner.nil? %>
  <% if current_user == @user %>
    <div class="alert alert-info">
      <h3>Você ainda não definiu seu summoner name!</h3>

      <%= form_tag('/me/summoner') do %>
        <div class="form-group">
          <div class="col-sm-10">
            <%= text_field_tag :summoner_name, '', class: 'form-control input-lg', placeholder: 'Summoner Name' %>
          </div>
          <div class="col-sm-2">
            <%= submit_tag 'Definir', class: 'btn btn-lg btn-block btn-primary' %>
          </div>
        </div>
      <% end %> &nbsp;

    </div>
  <% end %>
<% else %>
  <%= @user.summoner.name %>
<% end %>