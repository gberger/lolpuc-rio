<h1><%= @user.name %></h1>

<% if @user.summoner.nil? %>
  <% if current_user == @user %>
    <div class="alert alert-info">
      <h3>Você ainda não definiu seu <strong>Summoner Name</strong>!</h3>

      <%= form_for Summoner.new, url: '/me/summoner' do |t| %>
        <div class="form-group">
          <div class="col-sm-10">
            <%= t.text_field :name, class: 'form-control input-lg', placeholder: 'Summoner Name' %>
          </div>
          <div class="col-sm-2">
            <%= t.submit 'Definir', class: 'btn btn-lg btn-block btn-primary' %>
          </div>
        </div>
      <% end %> &nbsp;

    </div>
  <% end %>
<% else %>
  <%= @user.summoner.name %>
<% end %>